<script type="text/javascript">
    var imguri = "";
    function filePictureChange() {
        $.ajaxFileUpload({
            url: "Upload", //用于文件上传的服务器端请求地址
            type: "post",
            secureuri: false, //一般设置为false
            fileElementId: "filePicture", //文件上传空间的id属性
            dataType: "json", //返回值类型 一般设置为json
            success: function (data, status) {  //服务器成功响应处理函数
                imguri = data.FileUri;
                $("#uploadimg").attr("src", data.FileUri);
                swal({
                    title: "提示",
                    text: "上传成功",
                    icon: "success",
                });
                $("#url-res-txt").val(imguri);
            },
            error: function (data, status, e) {  //服务器响应失败处理函数
                swal({
                    title: "提示",
                    text: "上传失败",
                    icon: "error",
                });
            }
        });
    }

    function save() {
        var name = $("#txtawardname").val();
        if ($.trim(name) == "") {
            swal({
                title: "提示",
                text: "请输入奖品名称",
                icon: "error",
            });
            return;
        }
        if ($.trim(imguri) == "") {
            swal({
                title: "提示",
                text: "请上传图片",
                icon: "error",
            });
            return;
        }

        var ss = { awardname: name };
        var data = JSON.stringify(ss);
        $.ajax({
            type: "post",
            url: ' /api/award/name/is/exist/ ',
            data: data,
            contentType: "application/json",
            success: function (data) {
                if (data.return_code == "EXIST") {
                    swal({
                        title: "提示",
                        text: "奖品名称已存在",
                        icon: "error",
                    });
                }
                else {
                    saveurl(name, imguri);
                }

            }
        });
    }

    function saveurl(name, imguri) {
        var obj = { awardname: name, url: imguri }
        var jsondata = JSON.stringify(obj);
        $.ajax({
            type: "post",
            url: ' /api/award/upload/ ',
            data: jsondata,
            contentType: "application/json",
            success: function (data) {
                if (data.return_code == "SUCCESS") {
                    swal({
                        title: "提示",
                        text: "保存成功",
                        icon: "success",
                    });
                }
                else {
                    swal({
                        title: "提示",
                        text: "保存失败",
                        icon: "error",
                    });
                }
            }
        });
    }
</script>
